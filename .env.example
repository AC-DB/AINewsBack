# ============================================
# 应用配置
# ============================================
# "dev", "pro", "test"
APP_ENV=dev
# true, false
DEBUG=false

# ============================================
# 服务器配置
# ============================================
HOST=0.0.0.0
PORT=8080

# ============================================
# 监控和日志
# ============================================
# error, warning, info, debug
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=logs
# 10MB
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10
# json, text, colored
LOG_FORMAT=json

# Access Log
ENABLE_ACCESS_LOG=true
ACCESS_LOG_PATH=logs/access.log

# SQL Log (if using SQLAlchemy)
ENABLE_SQL_LOG=false
SQL_LOG_LEVEL=INFO

# ============================================
# 数据库配置
# ============================================
# PostgreSQL
DB_SERVER=XXX
DB_PORT=XXX
DB_USER=XXX
DB_PASSWORD=XXX
DB_NAME=XXX

# ============================================
# 验证码设置
# ============================================
CODE_LENGTH=0
CODE_EXPIRE_SECONDS=0
CODE_RATE_LIMIT=0
MAX_VERIFY_ATTEMPTS=0

# ============================================
# 钉钉机器人配置
# ============================================
DINGTALK_WEBHOOK_URL=XXX
DINGTALK_SECRET=`XXX

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=XXX
REDIS_PORT=0
REDIS_DB=0
REDIS_PASSWORD=XXX
REDIS_DECODE_RESPONSES=true

# ============================================
# 安全配置
# ============================================
# JWT
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CURRENT_ISSUER=XXX
TOKEN_AUDIENCE='["XXX"]'
ACCESS_TOKEN_ISSUER='["XXX"]'